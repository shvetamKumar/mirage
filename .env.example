# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=mirage_dev
DB_SSL=false
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=60000

# Authentication Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# API Rate Limiting (for authenticated endpoints)
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=1000

# Mock Service Configuration
MAX_RESPONSE_DELAY_MS=10000
MAX_RESPONSE_SIZE_BYTES=1048576

# Email Configuration (Optional - for email verification)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=Mirage Service <noreply@yourdomain.com>
EMAIL_ENABLED=false

# Security Configuration
HELMET_CSP_ENABLED=true
HELMET_HSTS_MAX_AGE=31536000

# Production Security (Set these in production)
# JWT_SECRET=generate-a-very-long-random-secret-key-32plus-chars
# DB_PASSWORD=secure-database-password
# CORS_ORIGIN=https://yourdomain.com,https://api.yourdomain.com
# EMAIL_ENABLED=true

# Optional: Monitoring and Analytics
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
PROMETHEUS_ENABLED=false

# Optional: Redis (for session storage or caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=